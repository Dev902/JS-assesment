// Create a variable to hold your NFTs
const bookNFTs = [];

// This function will take in some values as parameters, create an
// NFT object using the parameters passed to it for its metadata, 
// and store it in the variable above.
function mintNFT(title, author, year, genre) {
    const metaData = {
        title: title,
        author: author,
        year: year,
        genre: genre
    };
    bookNFTs.push(metaData);
    console.log("Minted: " + title);
}

// Create a "loop" that will go through an "array" of NFTs
// and print their metadata with console.log()
function listNFTs() {
    for (let i = 0; i < bookNFTs.length; i++) {
        console.log("Title: " + bookNFTs[i].title);
        console.log("Author: " + bookNFTs[i].author);
        console.log("Year: " + bookNFTs[i].year);
        console.log("Genre: " + bookNFTs[i].genre);
        console.log("--------------------");
    }
}

// Print the total number of NFTs we have minted to the console
function getTotalSupply() {
    return bookNFTs.length;
}

// Function to get details of an NFT by its index
function getNFTDetails(index) {
    if (index >= 0 && index < bookNFTs.length) {
        return bookNFTs[index];
    } else {
        return "NFT not found";
    }
}

// Call your functions below this line
mintNFT("To Kill a Mockingbird", "Harper Lee", 1960, "Fiction");
mintNFT("1984", "George Orwell", 1949, "Dystopian");
mintNFT("Pride and Prejudice", "Jane Austen", 1813, "Romance");

listNFTs();

console.log("Total Minted NFTs: " + getTotalSupply());

// Call mintNFT with different inputs to mint more NFTs
mintNFT("The Great Gatsby", "F. Scott Fitzgerald", 1925, "Classic");
mintNFT("Harry Potter and the Sorcerer's Stone", "J.K. Rowling", 1997, "Fantasy");

// List all minted NFTs
listNFTs();

// Get the updated total supply
console.log("Total Minted NFTs: " + getTotalSupply());

// Mint a new NFT
mintNFT("The Catcher in the Rye", "J.D. Salinger", 1951, "Coming-of-Age");

// Get details of the second NFT (index 1)
const nftDetails = getNFTDetails(1);
if (typeof nftDetails === "object") {
    console.log("Details of NFT at index 1:");
    console.log("Title: " + nftDetails.title);
    console.log("Author: " + nftDetails.author);
    console.log("Year: " + nftDetails.year);
    console.log("Genre: " + nftDetails.genre);
} else {
    console.log(nftDetails); // "NFT not found"
}
